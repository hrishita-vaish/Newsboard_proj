    </div>

    <div id="tabs-2">
        <%#= paginate @rssp %>
        <h3>Popular News</h3>
        <% @rssp.items.each do |r| %>
        <%=  r.try(:title) %>		
        <%headline = r.try(:title)%>
        <%link_article = r.try(:link)%>
        <%#= newsheadline(@rssp)%>
        <%= link_to "Read full article" , {:controller => 'newscategory', :action => 'description', :hl => headline, :al => link_article} %>
        <br>
        <br>
        <% end %>

    </div>
    
