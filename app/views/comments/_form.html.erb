<%= form_for([@news_discussion, @news_discussion.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 8, :cols => 14 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>